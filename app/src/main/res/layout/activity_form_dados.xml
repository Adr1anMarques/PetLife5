<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacground"
    tools:context=".FormDados">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="265dp"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-light"
        android:text="Informações!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="790dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="150dp"
            app:srcCompat="@drawable/baseline_pets_24" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="265dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-light"
            android:text="Raça:"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_raca"
            android:layout_width="265dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-light"
            android:text="pincher"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="265dp"
            android:layout_height="32dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Idade:"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_idade"
            android:layout_width="265dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-light"
            android:text="8"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="265dp"
            android:layout_height="32dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Saude:"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_saude"
            android:layout_width="265dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-light"
            android:text="Asma"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="265dp"
            android:layout_height="32dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Dono"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_nomeDono"
            android:layout_width="265dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-light"
            android:text="Adrian"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="265dp"
            android:layout_height="32dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Pagamento"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_pagamento"
            android:layout_width="265dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-light"
            android:text="Cartão"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="265dp"
            android:layout_height="32dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Tosa:"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_tosa"
            android:layout_width="265dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-light"
            android:text="Tosa na tesoura"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_proximo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="100dp"
            android:backgroundTint="@color/azul"
            android:text="Voltar"
            android:textColor="@color/white" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>